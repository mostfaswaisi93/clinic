<!-- Modal -->
<div class="modal fade" id="DetailsModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    ×
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    About Patient
                </h4>
            </div>
            <div class="modal-body" style="display:inline-block; width:100%">
                <div class="body">
                    <div class="row text-center m-t-10">
                        <div class="col-lg-6 col-md-12 col-sm-6 b-r">
                            <strong>
                                @Html.DisplayName("FullName")
                            </strong>
                            <p>
                                @Html.Label("FullName", new { @id = "lblFullName" })
                            </p>
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-6 b-r">
                            <strong>
                                @Html.DisplayName("Phone")
                            </strong>
                            <p>
                                @Html.Label("Phone", new { @id = "lblPhone" })
                            </p>
                        </div>
                    </div>
                    <hr>
                    <div class="row text-center m-t-10">
                        <div class="col-lg-6 col-md-12 col-sm-6 b-r">
                            <strong>
                                @Html.DisplayName("Birthdate")
                            </strong>
                            <p>
                                @Html.Label("Birthdate", new { @id = "lblBirthdate" })
                            </p>
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-6 b-r">
                            <strong>
                                @Html.DisplayName("Gender")
                            </strong>
                            <p>
                                @Html.Label("GenderDesc", new { @id = "lblGender" })
                            </p>
                        </div>
                    </div>
                    <hr>
                    <div class="row text-center m-t-10">
                        <div class="col-lg-6 col-md-12 col-sm-6 b-r">
                            <strong>
                                @Html.DisplayName("Address")
                            </strong>
                            <p>
                                @Html.Label("Address", new { @id = "lblAddress" })
                            </p>
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-6 b-r">
                            <strong>
                                @Html.DisplayName("Doctor Name")
                            </strong>
                            <p>
                                @Html.Label("DoctorName", new { @id = "lblDoctorName" })
                            </p>
                        </div>
                    </div>
                    <hr>
                    <div class="row text-center m-t-10">
                        <div class="col-md-12">
                            <strong>
                                @Html.DisplayName("Notes")
                            </strong>
                            <p>
                                @Html.Label("Notes", new { @id = "lblNotes" })
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
