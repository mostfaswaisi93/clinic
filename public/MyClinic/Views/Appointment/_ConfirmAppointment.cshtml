@model MyClinic.Models.ConfirmAppointmentVM

@{
    Layout = null;
}

<div class="modal fade" id="ConfirmModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    ×
                </button>
                <h4 class="modal-title" id="ConfirmTitle">
                    Confirm Appointment
                </h4>
            </div>
            <div class="modal-body" style="display:inline-block; width:100%">
                @Html.HiddenFor(model => model.CAppointID, new { @id = "hdn-CAppointID" })
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.CAppointRequestAmount)
                    </label>
                    <div class="input-height col-md-8">
                        @Html.TextBoxFor(model => model.CAppointRequestAmount, new { @class = "form-control", @id = "txtCAppointRequestAmount" })
                        @Html.ValidationMessageFor(model => model.CAppointRequestAmount, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.CAppointPaidAmount)
                    </label>
                    <div class="input-height col-md-8">
                        @Html.TextBoxFor(model => model.CAppointPaidAmount, new { @class = "form-control", @id = "txtCAppointPaidAmount" })
                        @Html.ValidationMessageFor(model => model.CAppointPaidAmount, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">
                        @Html.LabelFor(model => model.CAppointNotes)
                    </label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.CAppointNotes, new { @class = "txtarea", @id = "txtCAppointNotes" })
                        @Html.ValidationMessageFor(model => model.CAppointNotes, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <!-- Button to trigger modal -->
            <div class="modal-footer" dir="rtl">
                <button id="btnSaveConfirm" class="btn btn-primary">حفظ</button>
                <button id="btnSavePrint" class="btn btn-primary">حفظ وطباعة سند القبض</button>
                <button id="btnClose" class="btn btn-danger" data-dismiss="modal">إغلاق</button>
            </div>
        </div>
    </div>
</div>