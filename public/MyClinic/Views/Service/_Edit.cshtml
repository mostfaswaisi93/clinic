@model MyClinic.Models.Service

@{
    Layout = null;
}

<div class="modal fade" id="EditModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    ×
                </button>
                <h4 class="modal-title" id="EditTitle">
                    Edit Service
                </h4>
            </div>
            <div class="modal-body" style="display:inline-block; width:100%">
                @Html.HiddenFor(model => model.ServiceID, new { @id = "hdn-id" })
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-3 center">
                        @Html.LabelFor(model => model.Name)
                    </label>
                    <div class="input-height col-md-9">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control input-form", @id = "txtName" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 center">
                        @Html.LabelFor(model => model.Price)
                    </label>
                    <div class="input-height col-md-9">
                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control input-form", @id = "txtPrice" })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSave" class="btn btn-primary">Save</button>
                <button id="btnClose" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
