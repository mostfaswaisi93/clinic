@model MyClinic.Models.AppointmentInfoVM

@{
    Layout = null;
}

<div class="modal fade" id="ConfirmModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    ×
                </button>
                <h4 class="modal-title" id="ConfirmTitle">
                    Confirm Doctor Schedule
                </h4>
            </div>
            <div class="modal-body" style="display:inline-block; width:100%">
                @Html.HiddenFor(model => model.AppointmentId, new { @id = "hdn-CAppointID" })
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-3">
                        @Html.LabelFor(model => model.DoctorNotes)
                    </label>
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.DoctorNotes, new { @class = "txtarea", @id = "txtCDoctorNotes", @style = "padding-bottom: 50px;" })
                        @Html.ValidationMessageFor(model => model.DoctorNotes, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <!-- Button to trigger modal -->
            <div class="modal-footer" dir="rtl">
                <button id="btnSaveConfirm" class="btn btn-primary">حفظ</button>
                <button id="btnClose" class="btn btn-danger" data-dismiss="modal">إغلاق</button>
            </div>
        </div>
    </div>
</div>